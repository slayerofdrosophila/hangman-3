<%- include('bootheader') -%>

<%- include('menubar') -%>

<br>

<table class="table table-bordered table-striped">
  <% gameApp.waitingRooms.forEach(waitingRoom => {%>
    <tr>
      <td>Room <%= waitingRoom.roomID %></td>
      <td>Players: <%= waitingRoom.playerIds.length %> / <%= waitingRoom.maxPlayers%></td>
      <td><% if(waitingRoom.isAvailable) { %> 
          <form method="post" action ="/selectRoom">
          <input type="text" name="roomnumber" hidden='true' value='<%= waitingRoom.roomID%>' />
          <input type="submit" value="Join"/>
        </form>
        <% } %>
      </td>

      
    </tr>
  <% }) %>
</table>





